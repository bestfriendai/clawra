# === Required ===
TELEGRAM_BOT_TOKEN=1234567890:AAExampleBotToken # Get from @BotFather
TELEGRAM_WEBHOOK_SECRET=replace_with_random_secret # Random string for webhook verification
FAL_KEY=fal_example_key_from_dashboard # Get from fal.ai/dashboard/keys
VENICE_API_KEY=venice_example_api_key # Get from venice.ai
CONVEX_URL=https://your-project.convex.cloud # From `npx convex dev` output

# === Telegram / Webhook ===
WEBHOOK_URL=https://bot.example.com # Public URL used for webhook mode (leave empty for long polling)

# === Optional: Payments ===
STRIPE_SECRET_KEY=sk_live_example # Stripe secret key for VIP subscriptions
STRIPE_WEBHOOK_SECRET=whsec_example # Stripe webhook signing secret
STRIPE_PROVIDER_TOKEN=123456:TEST:telegram_provider_token # Telegram Payments provider token

# === Optional: Rate Limiting (Upstash Redis) ===
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io # Upstash REST URL
UPSTASH_REDIS_REST_TOKEN=upstash_rest_token # Upstash REST auth token

# === Optional: App Links ===
MINI_APP_URL=https://miniapp.example.com # Mini app URL shown in bot menus

# === Optional: Admin / AI Settings ===
ADMIN_TELEGRAM_IDS=123456789,987654321 # Comma-separated Telegram user IDs with admin access
IMAGE_QUALITY=pro # AI quality preset (default: pro)
FALLBACK_STRATEGY=nano # AI model fallback strategy (default: nano)

# === Optional: Crypto Payments ===
MASTER_MNEMONIC=abandon abandon abandon abandon abandon abandon abandon abandon abandon abandon abandon about # Deposit wallet master mnemonic
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com # Solana RPC endpoint
MAIN_SOL_WALLET=YourMainSolWalletPublicKeyHere # Main treasury wallet address

# === Runtime ===
PORT=3000 # Express server port
NODE_ENV=production # Environment name
FREE_MODE=true # true=free mode, false=paid mode
